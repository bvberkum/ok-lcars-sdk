doctype html
include html

if !profile
- profile = context.config.default_profile

html(profile=profile)
  head
    meta(name="format-detection",content="telephone=no")
    meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi")
    block head
      +std-html-head("Sitefile LCARS Default Client")
    block head-extra

  body
    block prologue
    .header.container
      block header
        p Template header
        hr
    block main
    .document.container
      block document
        p Template document
    .footer.container
      block footer
        hr
        p Template footer
    block epilogue
