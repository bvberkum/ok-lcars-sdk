doctype html
include html-inc
// Basic HTML page with blocks <OK-SDK:app/ok-sdk/view/base.pug>

if !profile
- profile = context.config.default_profile

block page-settings
  if !body_attributes
  - body_attributes = {}

html(profile=profile)
  head
    block head
      +std-html-head("Sitefile LCARS Default Client")

    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async,src="https://www.googletagmanager.com/gtag/js?id=UA-4932429-2")
    script
      | window.dataLayer = window.dataLayer || [];
      | function gtag(){dataLayer.push(arguments);}
      | gtag('js', new Date());
      |
      | gtag('config', 'UA-4932429-2');

    block head-extra

  body&attributes(body_attributes)
    block prologue
    .header.container
      block header
    block main
    .document.container
      block document
    .footer.container
      block footer
    block epilogue

